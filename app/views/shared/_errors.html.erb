<% if obj.errors.any? %>
  <div class="col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
      <div class="error_messages">
        <ul>
          <li><%= obj.errors.count %>件のエラーがあります！</li>
          <% obj.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>