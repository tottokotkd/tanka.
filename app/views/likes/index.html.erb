<div class="post">
  <h3>お気に入り作品</h3>
</div>

<% @likes.each do |like| %>
  <% post = Post.find_by(id: like.post_id) %>
    <div class="box">
      <div class="post-content">
        <h2><%= link_to simple_format(post.content), post_path(post.id) %></h2>
      </div>
  
      <div class="post-info">
        <p>
          <%= link_to post.user.name, user_path(post.user.id) %> | 
          <%= simple_time(post.created_at) %>
        </p>
      </div>
    </div>
<% end %>
