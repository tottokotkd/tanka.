<article class-"row">
  <div class="box col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
    <div class="post-content">
      <h2><%= @post.content %></h2>
    </div>

      <div class="post-info">
        <ul>
          <li><%= link_to @post.user.name, user_path(@post.user.id) %></li>
          <li><%= simple_time(@post.created_at) %></li>
          <li>
            <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
              <%= link_to like_path(@like.id), method: :delete do %>
                <span class="fa fa-heart like-btn"></span>
              <% end %>
            <% else %>
              <%= link_to likes_path(post_id: @post.id), { method: :post } do %>
                <span class="fa fa-heart like-btn-unlike"></span>
              <% end %>
            <% end %>
            <span id="like-count"><%= "#{@likes_count}人のお気に入り" if @likes_count > 0 %> </span>
          </li>
        </ul>
      </div>

      <% if @post.user.id == @current_user.id %>
        <div class="edit-menu">
          <p>
            <%= link_to "編集", edit_post_path(@post.id) %> |
            <%= link_to "削除", post_path(@post.id), method: :delete, data: {confirm: "本当に削除してもいいですか？"} %>
          </p>
        </div>
      <% end %>
  </div>

  <div id="like-users" class="mini-box white-shadow col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
    <p>お気に入り登録したユーザー</p>
    <% @post.like_users.each do |like_user| %>
      <ul>
        <li>
          <b><%= link_to like_user.name, user_path(like_user.id) %></b>
          <% unless like_user.description.blank? %>
            <%= like_user.description.truncate(30) %>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>

  <div class="mini-box col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
    <p class="path">→ 感想を寄せる</p>

    <%= render partial: "comments/form", locals: {comment: @comment, post: @post} %>
    <div id="comment_area">
      <%= render partial: "comments/index", locals: {comments: @comments, post: @post} %>
    </div>
  </div>
</article>
<script>
 $(function(){
   $('#like-count').on('click', function(){
     $('#like-users').slideToggle(400);
   });
 });
</script>