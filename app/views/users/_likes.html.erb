<% if @likes.present? %>
  <% @likes.each do |like| %>
    <% post = Post.find_by(id: like.post_id) %>
      <div class="box user-post col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">
        <div class="post-content">
          <div class="index-post-image"><%= link_to image_tag(post.image), post_path(post) if post.image.present? %></div>
          <h2><%= link_to post.content, post_path(post.id) %></h2>
        </div>

        <div class="post-info">
          <ul>
            <li><%= render partial: 'shared/user_info', locals: { user: post.user } %></li>
            <li><%= simple_time(post.created_at) %></li>
            <li>
              <div id="likes_area_<%= post.id %>" class="likes-area">
                <%= render partial: 'likes/likes', locals:{ post: post } %>
              </div>
            </li>
          </ul>
        </div>
      </div>
  <% end %>
<% else %>
  <p class="yet path col-md-12 col-sm-12 col-xs-12">
    まだお気に入りはありません。
  </p>
<% end %>
