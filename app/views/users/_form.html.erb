<%= form_with(model: @user, local: true, url: users_new_or_edit_confirm_path) do |f| %>
  <%= render partial: 'shared/errors', locals:{ obj: @user }%>

    <ul>
      <li class="row">
        <%= f.label :"お名前", class:"col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
        <%= f.text_field :name, class:"col-md-4" %>
      </li>
      <li class="row">
        <%= f.label :"Email", class:"col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
        <%= f.email_field :email, class:"col-md-4" %>
      </li>
      <li class="row">
        <%= f.label :"パスワード", class:"password col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
        <%= f.password_field :password, class:"password col-md-4" %>
      </li>
      <li class="row">
        <%= f.label :"パスワード(確認)", class:"col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
        <%= f.password_field :password_confirmation, class:"password col-md-4" %>
      </li>
      <% if logged_in? %>
        <li class="row profile-desc"><%= f.label :"自己紹介", class:"col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
          <%= f.text_area :description, class:"col-md-4" %>
        </li>
        <li class="row profile-desc"><%= f.label :"プロフィールアイコン", class:"col-md-offset-2 col-md-3 col-sm-12 col-xs-12" %>
          <label for="file_photo" class="up col-md-2">
              ＋写真を選択
            <%= f.file_field :image, id:"file_photo", style:"display:none;" %>
          </label>
          <%= f.hidden_field :image_cache %>
        </li>
      <% end %>

      <li class="row bottom-margin"><%= f.submit "確認する", id: "btn", class:"col-md-offset-5 col-md-2" %></li>
    </ul>

  <% end %>
</section>